# Get your free API key from https://console.groq.com/keys
GROQ_API_KEY=your-groq-key-here

# Database (matches docker-compose.yml)
DATABASE_URL="postgresql://fotoman:fotoman_dev@localhost:5432/fotoman?schema=public"

# SIMIT lookup: set to "true" to scrape real SIMIT via headless browser
# Requires playwright chromium: npx playwright install chromium
# Set to "false" to use mock data only
SIMIT_LIVE=true

# NextAuth
NEXTAUTH_SECRET=your-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# Resend (for magic link auth + email submission)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=your-resend-key-here
RESEND_WEBHOOK_SECRET=your-webhook-signing-secret

# Email sender (set after verifying domain in Resend)
FROM_EMAIL=peticiones@fotomancol.com
FROM_NAME=Fotoman - Defensa Legal

# Override authority email for testing (in dev, petitions go here instead of movilidad@cali.gov.co)
STAGING_AUTHORITY_EMAIL=tu-correo-de-prueba@fotomancol.com

# Wompi payments (https://comercios.wompi.co)
WOMPI_PRIVATE_KEY=prv_test_XXXXXXXX
WOMPI_PUBLIC_KEY=pub_test_XXXXXXXX
